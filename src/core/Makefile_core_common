	$(CORE_DIR)/sound                             \
	$(CORE_DIR)/base/fs                           \
	$(CORE_DIR)/base/cpu                          \
	$(CORE_DIR)/base/exception                    \
	$(CORE_DIR)/base/mathlib                      \
	$(CORE_DIR)/base/ui                           \
	$(CORE_DIR)/base/utils                        \
	$(CORE_DIR)/base/event                        \
	$(CORE_DIR)/base/log                          \
	$(CORE_DIR)/base/script                       \
	$(CORE_DIR)/base/gc                           

# makefile のあるサブディレクトリの定義
# (順番に注意)

SUB_DIRS+=\
	$(CORE_DIR)/risse              \
	$(SUBSYS_DIRS)                 \
	$(CORE_DIR)/main


# このバイナリが依存しているライブラリ
DEP_LIBS=BOOST BOOST_THREAD ZLIB WX LIBOGG LIBVORBIS OPENAL COMMON GC RISAGL LIBJPEG LIBPNG

