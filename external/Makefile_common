default: all

all: build_lib


build_lib: build_completed


copy_complated: Makefile
	rm -rf src_temp
	svn export src src_temp || cp -pR src src_temp
	touch copy_complated

build_completed: Makefile copy_complated
	./build.sh
	touch build_completed

distclean:
	rm -f copy_complated build_completed
	for dir in *; do if [ -d "$$dir" ] && [ "x$$dir" != "xsrc" ] ; then rm -rf $$dir; fi; done

clean:
	rm -f build_completed copy_complated
	rm -rf src_temp

