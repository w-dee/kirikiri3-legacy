TOP_DIR=$(CORE_DIR)/../..

include $(TOP_DIR)/Makefile_filenames

# subsys.o のある(subsys.oが作成される)サブディレクトリの定義

SUBSYS_DIRS=\
	$(CORE_DIR)/base/config                       \
	$(CORE_DIR)/risa/packages/risa/graphic/image  \
	$(CORE_DIR)/risa/packages/risa/stdio          \
